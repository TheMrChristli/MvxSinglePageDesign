<views:MvxApplication  xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
                       x:Class="Mvx.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:viewmodels="clr-namespace:Mvx.Core.ViewModels;assembly=Mvx.Core"
                       xmlns:view="clr-namespace:Mvx.WPF.Views"
             xmlns:local="clr-namespace:Mvx.WPF"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodels:FirstViewModel}">
            <view:FirstView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:SecondViewModel}">
            <view:SecondView />
        </DataTemplate>
    </Application.Resources>
</views:MvxApplication>
